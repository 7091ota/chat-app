<div class="side-header">
  <div class="sh-name">
    <%= link_to edit_user_path(current_user) do %>
      <%= current_user.name %>
    <% end %>
  </div>
  <div class="sh-btn">
    <a href="#">チャットを作成する</a>
  </div>
</div>

<div class="side-body">
  <% current_user.rooms.each do |room| %>
    <div class="sb-room">
      <div class="sb-roomname">
        <a href="#"><%= room.name%></a>
      </div>
    </div>
  <% end %>
</div>